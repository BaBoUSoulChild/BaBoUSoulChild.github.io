input {
	width: 122px;
	height: 26px;
	font-size: 14px;
	font-family: Verdana;
	padding: 0;
	outline: 0;
	margin: -1px;
}

.head {
	font-size: 18px;
	font-family: Verdana;
}

label {
	font-size: 18px;
	color: #33f;
}

.col div {
	float: left;
	margin: 10px;
}

#compo {
	white-space: pre;
	font-size: 18px;	position: fixed;	bottom: 0;	right: 0;	background-color: rgba(240, 240, 240, 0.9); /* Couleur de fond avec opacit√© */	padding: 10px;
}

td {
	/* text-align: right; */
	font-weight: bold;
	opacity: 0.8;
	min-width: 122px;
	user-select: none;
}

tr:nth-child(odd) input {
	background-color: #eee;
}

tr:nth-child(even) input {
	background-color: #efe;
}

